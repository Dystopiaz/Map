<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="nwpu.cs.com.map.activities.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.baidu.mapapi.map.MapView
            android:id="@+id/bmapView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/imageButton_myposition"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:src="@mipmap/arrow"
                android:background="#f0ff"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/imageButton_search"
                    android:layout_width="0dp"
                    android:layout_height="50sp"
                    android:layout_weight="0.5"
                    android:background="@mipmap/glass2" />
                <Button
                    android:id="@+id/nearby_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#ffff"
                    android:textSize="30sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="附近" />
                <Button
                    android:id="@+id/select_city_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#ffff"
                    android:textSize="30sp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="选择城市" />
                <Button
                    android:id="@+id/path_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#ffff"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:text="路径" />




            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>


    <!--底部导航栏控件-->
